<div class="login-form-container">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="login-form-card">
          <h2 class="text-center mb-4">Welcome back!</h2>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>
            <div class="form-group">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-sm mb-3", placeholder: "Email" %>
            </div>

            <div class="form-group">
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-sm mb-4", placeholder: "Password" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-group form-check">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, class: "form-check-label font-weight-bold" %>
              </div>
            <% end %>

            <%= f.submit "Log in", class: "btn btn-primary btn-block my-4 font-weight-bold" %>
          <% end %>
          <p class="text-center">Don't have an account? <%= link_to "Sign up", new_user_registration_path %></p>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .login-form-container {
    position: relative;
    height: 100vh;
    overflow: hidden;
  }

  .login-form-container:before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: linear-gradient(to bottom, #0099ff 0%, #ffffff 100%);
    z-index: -1;
    animation: animate 10s ease-in-out infinite;
  }

  .login-form-card {
    background-color: rgba(255, 255, 255, 0.85);
    border-radius: 20px;
    padding: 30px;
    box-shadow: 0px 10px 20px #00000029;
  }

  @keyframes animate {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
</style>
