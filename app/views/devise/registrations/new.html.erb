<div class="signup-form-container">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="signup-form-card">
          <h2 class="text-center mb-4">Sign up</h2>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signup"}) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group">
              <%= f.label :email, class: "font-weight-bold" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-sm mb-3", placeholder: "Email" %>
            </div>

            <div class="form-group">
              <%= f.label :password, class: "font-weight-bold" %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-sm mb-3", placeholder: "Password" %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation, class: "font-weight-bold" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-sm mb-4", placeholder: "Password Confirmation" %>
            </div>

            <%= f.submit "Sign up", class: "btn btn-primary btn-block my-4 font-weight-bold" %>
          <% end %>
          <p class="text-center">Already have an account? <%= link_to "Log in", new_user_session_path %></p>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .signup-form-container {
    background: linear-gradient(to bottom, #0099ff 0%, #ffffff 100%);
    background-size: 100% 100%;
    height: 100vh;
  }
  .signup-form-card {
    background-color: rgba(255, 255, 255, 0.85);
    border-radius: 20px;
    padding: 30px;
    box-shadow: 0px 10px 20px #00000029;
  }
</style>
